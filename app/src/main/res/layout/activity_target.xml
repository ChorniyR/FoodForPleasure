<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserTargetActivity" android:backgroundTint="#00000000">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="250dp" app:srcCompat="@drawable/putoff" android:id="@+id/LoseWeight"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.062"/>
    <Button
            android:text="Сбросить вес"
            android:layout_width="440dp"
            android:onClick="submitLoseWeight"
            android:layout_height="210dp" android:id="@+id/buttonLoseWeight" android:textStyle="bold"
            android:textSize="24sp" android:textColor="@android:color/white"
            android:fontFamily="sans-serif-thin" android:backgroundTint="#80000000"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/LoseWeight"
            app:layout_constraintBottom_toBottomOf="@+id/LoseWeight" app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintVertical_bias="0.8"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp" app:srcCompat="@drawable/mussles"
            android:id="@+id/GainMuscleMass" android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.523"/>
    <Button
            android:text="Мышечная масса"
            android:layout_width="437dp"
            android:layout_height="195dp" android:id="@+id/buttonGainMuscleMass" android:textSize="24sp"
            android:fontFamily="sans-serif-thin" android:textColor="@android:color/white"
            android:textStyle="bold" android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:backgroundTint="#80000000"
            app:layout_constraintEnd_toEndOf="@+id/GainMuscleMass" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/GainMuscleMass"
            app:layout_constraintTop_toTopOf="@+id/GainMuscleMass" app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintVertical_bias="0.509"/>
    <ImageView
            android:layout_width="417dp"
            android:layout_height="250dp" app:srcCompat="@drawable/putofweight"
            android:id="@+id/GainWeight" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="Набрать вес"
            android:layout_width="420dp"
            android:layout_height="189dp" android:id="@+id/buttonGainWeight" android:textStyle="bold"
            android:textColor="@android:color/white" android:textSize="24sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:backgroundTint="#80000000"
            android:fontFamily="sans-serif-thin"
            app:layout_constraintStart_toStartOf="@+id/GainWeight"
            app:layout_constraintBottom_toBottomOf="@+id/GainWeight"
            app:layout_constraintTop_toTopOf="@+id/GainWeight" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333" app:layout_constraintVertical_bias="0.491"/>
</androidx.constraintlayout.widget.ConstraintLayout>